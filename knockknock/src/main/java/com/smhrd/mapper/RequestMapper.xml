<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smhrd.mapper.RequestMapper">
	<select id="showCustRequest" parameterType="CustomerDTO" resultType="RequestDTO">
		select * from request_info where cust_no = #{cust_no}
	</select>
	
	<select id = "showRequest" resultType = "RequestDTO">
		select * from request_info
	</select>
	
	<insert id = "requestWrite" parameterType = "RequestDTO">
		insert into request_info(cust_no, req_title, req_file, req_cate, req_content, req_price) 
			values (#{cust_no}, #{req_title}, #{req_file}, #{req_cate}, #{req_content}, #{req_price})
			
	</insert>
</mapper>